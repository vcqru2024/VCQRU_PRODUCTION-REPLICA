*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
/* Chrome, Safari, Edge, Opera */
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Firefox */
input[type=number] {
  -moz-appearance: textfield;
}
.hero{
    background-image: url('../img/LexisNexis_bg.jpg');
    background-position: center;
    height: 120vh;
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
}
.app-form .logo img{
    height: 4.5rem;
    background-color: var(--bs-white);
    border-radius: 4px;
}
.app-form .logo{
    text-align: center;
    margin-bottom: 2.5rem;
}
.app-form .card .card-body h4{
    text-transform: uppercase;
    color: #e8171f;
    text-align: center;
    font-weight: 600;
    margin-bottom: 1.50rem;
}
.app-form .card {
    border: 0;
    box-shadow: var(--bs-box-shadow);
}
.app-form .card .card-body{
    padding: 2.5rem;
}
.app-form .card .card-body input{
    border-radius: 4px;
}
.app-form .card .card-body label{
    font-size: 14px;
}
.app-form .card .card-body button{
    background-color: #e8171f;
    border-radius: 4px;
    width: 100%;
    color: var(--bs-white);
    text-transform: capitalize;
}
.social-links{
    margin-top: 3rem;
}
.social-links ul{
    display: flex;
    list-style: none;
    margin-bottom: 3rem;
    padding: 0;
}
.social-links ul li{
    margin-right: 1rem;
}
.social-links ul li a{
    width: 2.5rem;
    height: 2.5rem;
    background-color: #e8171f;
    display: flex;
    align-items: center;
    color: var(--bs-white);
    justify-content: center;
    border-radius: var(--bs-border-radius);
    font-size: 20px;
    text-decoration: none;
}

.social-links ul li:last-of-type{
    margin: 0;
}
.social-links ul li svg{
    color: var(--bs-white);
}
.copyright{
    background-color:#000;
    position: fixed;
    width: 100%;
    bottom: 0;
    padding: 4px 0;
    text-align: center;
}
.copyright a{
    color: var(--bs-white);
    text-decoration: none;
    font-size: 14px;
}
@media screen and (min-width: 1024px) {
    .hero{
        height: auto;
    }
    .logo{
        background-color: var(--bs-white);
    }
}
@media screen and (min-width: 768px) {
    .app-form .logo{
        background-color: var(--bs-white);
        display: inline-block;
        margin-bottom: 1rem;
    }
}   